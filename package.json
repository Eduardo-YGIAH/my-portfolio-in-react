  "bugs": {
    "url": "https://github.com/Eduardo-YGIAH/my-portfolio-in-react/issues"
  },
  "homepage": "https://github.com/Eduardo-YGIAH/my-portfolio-in-react#readme",
  "dependencies": {
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "nodemailer": "^6.4.4",
    "nodemailer-mailgun-transport": "^2.0.0"
  }
}